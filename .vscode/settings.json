{
  "editor.minimap.enabled": false,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 24,

  "[markdown]": {
    "editor.quickSuggestions": true
  },

  "files.defaultLanguage": "markdown",
  "files.exclude": {
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/node_modules": true
  },

  "markdown.styles": [".vscode/github-style.css"],
  
  "foam.edit.linkReferenceDefinitions": "withExtensions",
  "foam.orphans.exclude": ["notes"],

  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "markdown.preview.breaks": true,
  "prettier.singleQuote": false,

  "vscodeMarkdownNotes.noteCompletionConvention": "noExtension",
  "vscodeMarkdownNotes.slugifyMethod": "github-slugger",

  // 笔记配置
  "foam.openDailyNote.directory": "notes",
  "foam.openDailyNote.filenameFormat": "'每日笔记'-yyyy-mm-dd",
  "foam.openDailyNote.fileExtension": "md",
  "foam.openDailyNote.titleFormat": "'每日笔记'-yyyy-mm-dd",

  // 图片黏贴
  "pasteImage.path": "${projectRoot}/images",
  "pasteImage.encodePath": "urlEncode",
  "pasteImage.showFilePathConfirmInputBox": true,
  "pasteImage.filePathConfirmInputBoxMode": "onlyName",
}
